<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Cadastrar-se</h5>
            <form class="form-signin">
              <div class="form-label-group">
                <%= f.label :nome %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "form-control" %>
              </div>

              <div class="form-label-group">
                <%= f.label :sobrenome %><br />
                <%= f.text_field :surname, autofocus: true, autocomplete: "surname", :class => "form-control" %>
              </div>

              <div class="form-label-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
              </div>

              <div class="form-label-group">
                <%= f.label :senha %>
                <% if @minimum_password_length %>
                <em>(minimo de <%= @minimum_password_length %> caracteres contendo no minimo um numero e um caractere especial.)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", :class => "form-control" %>
              </div>

              <div class="form-label-group">
                <%= f.label :confirme_a_senha %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "form-control" %>
              </div>

              <%= f.submit "Cadastrar-se", :class => "btn btn-lg btn-primary btn-block text-uppercase" %>
              <hr class="my-4">
              <div class="d-flex justify-content-between">
                <button class="navbar-text btn">
                  <%= render "devise/shared/links"%>
                </button>
                <button class="navbar-text btn">
                  <%= link_to "Voltar", :back, :class => "btn btn-primary" %>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
