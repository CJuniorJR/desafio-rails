<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card card-signin my-5">
          <div class="card-body">
            <h5 class="card-title text-center">Esqueceu a senha?</h5>
            <form class="form-signin">
              <div class="form-label-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "form-control" %>
              </div>

              <%= f.submit "enviar instruções", :class => "btn btn-lg btn-primary btn-block text-uppercase" %>
              <hr class="my-4">
              <div class="d-flex justify-content-between">
                <button class="navbar-text btn">
                  <%= render "devise/shared/links"%>
                </button>
                <button class="navbar-text btn">
                  <%= link_to "Voltar", :back, :class => "btn btn-primary" %>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
